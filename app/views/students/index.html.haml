- content_for :page_header do
  Listagem de estudantes
  .pull-right
    = link_to "Novo estudante", new_student_path, class: "btn btn-primary"

%table.table
  %thead
    %tr
      %td #
      %td Nome
      %td Ações
  %tbody
    - unless @students.empty?
      = render @students
    - else
      %tr
        %td(colspan="3") Não existem estudantes cadastrados. Deseja #{link_to "cadastrar", new_student_path} agora?

= paginate @students