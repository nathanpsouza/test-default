- content_for :page_header do
  Informações do estudante

%p
  %strong Nome:
  = @student.name

%p
  %strong Email:
  = @student.name

%p
  %strong RG/CPF:
  = @student.documents

%p
  %strong Telefone:
  = @student.phone_number

%p
  %strong Endereço:
  = @student.address

= link_to "Listagem", students_path, class: "btn btn-default"
= link_to "Editar", edit_student_path( @student ), class: "btn btn-danger"
= link_to "Remover", student_path( @student ), class: "btn btn-warning", data: { confirm: "Voce tem certeza?" }, method: :delete