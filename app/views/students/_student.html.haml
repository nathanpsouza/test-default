%tr
  %td= student.id
  %td= student.name
  %td.pull-right
    = link_to "Ver", student_path( student ), class: "btn btn-xs btn-default"
    = link_to "Editar", edit_student_path( student ), class: "btn btn-xs btn-warning"
    = link_to "Remover", student_path( student ), class: "btn btn-xs btn-danger", data: { confirm: "Voce tem certeza?" }, method: :delete